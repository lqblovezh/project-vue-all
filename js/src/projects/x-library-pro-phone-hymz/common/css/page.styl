// 我的--vip页面
.vip-bg
  height 3.6rem
  background url(../img/vip-bg.png) no-repeat center
  background-size cover

.scroll
  position relative
  z-index 10

.nc-checkbox
  position relative
  margin-right 0.2rem
.nc-checkbox-input
  width 20px
  height 20px
  opacity 0
input[type="checkbox"]
  position absolute
  z-index 10
  box-sizing border-box
  padding 0
.nc-checkbox-input:checked+.nc-checkbox-core
  background-color theme-color
  border-color theme-color
.nc-checkbox-core
  display inline-block
  background-color #fff
  border-radius 100%
  border 1px solid #ccc
  position relative
  width 20px
  height 20px
  vertical-align middle
.nc-checkbox-input:checked+.nc-checkbox-core:after
  border-color #fff
  transform rotate(45deg) scale(1)
.nc-checkbox-core:after
  border 2px solid transparent
  border-left 0
  border-top 0
  content ''
  top 4px
  left 7px
  position absolute
  width 4px
  height 8px
  transform rotate(45deg) scale(0)
  transition transform .2s, -webkit-transform .2s

.result-list
