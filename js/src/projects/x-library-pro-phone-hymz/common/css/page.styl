@import 'variable.styl'
@import 'util.styl'
.title-container
  padding-top header-height
.container
  padding 0 0.30rem
.flex
  display flex
.flex-tc
  display flex
  justify-content center
  align-items center
.flex-bs
  display flex
  align-items center
  justify-content space-between
.flex-ac
  display flex
  align-items center
.fixed-bottom
  position fixed
  width 100%
  bottom 0
.mb30rem
  margin-bottom 0.3rem
.pb20rem
  padding-bottom 0.2rem
button
	width 1.5rem
	height 0.5rem
	line-height 0.5rem
	border none
	outline none
	&:active
		box-shadow inset 0 3px 5px rgba(0,0,0,.1)
.btn-default
	color theme-color
	background-color #FFF
	border 1px solid theme-color
.btn-theme
	color #FFF
	background-color theme-color
.btn-error
	color #FFF
	background-color red
.c-bg-linear
  background linear-gradient(to right, #f1d29e, #ecc78c, #e7bc79)

.p-tips
  height 0.6rem
  line-height 0.6rem
  font-size 14px
  color font-color__basic

.center-scroll
  scroll()
  padding-top header-height
  padding-bottom bottom-height
.bottom-scroll
  scroll()
  padding-bottom bottom-height
.top-scroll
  scroll()
  padding-top header-height

.center-scroll--ios
  scroll()
  padding-top header-height + line-height
  padding-bottom bottom-height
.bottom-scroll--ios
  scroll()
  padding-top line-height
  padding-bottom bottom-height
.top-scroll--ios
  scroll()
  padding-top header-height+line-height

// category页面
.category
  &-wrapper
    position relative
    height 100%
    overflow-x hidden
    overflow-y auto
    > .left-panel
      position absolute
      top 0
      left 0
      bottom 0
      width category-left-width
      background-color default-color
      .cube-tab-bar
        flex-wrap wrap
        // background-color
        > .cube-tab
          width 100%
          padding 0
          flex-basis unset
          height category-left-item-height
          line-height category-left-item-height
          font-size 14px
          color #4d4d4d
          transition all .3s ease-in
          &.cube-tab_active
            position relative
            color theme-color
            font-size 16px
            background-color #FFF
            &:before
              content ''
              display inline-block
              position absolute
              left 0
              top 0.25rem
              width 0.06rem
              height 0.4rem
              background-color theme-color
    > .right-panel
      position absolute
      top 0
      bottom 0
      left category-left-width
      right 0

