// 背景图片
bg-image($url)
  background-image url($url + '@2x.png')
  @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
    background-image url($url + '@3x.png')
// 不换行
no-wrap()
  text-overflow ellipsis
  overflow hidden
  white-space nowrap
// 扩展点击区域
extend-click()
  position relative
  &:before
    content ''
    position absolute
    top -10px
    left -10px
    right -10px
    bottom -10px
set-color(name, val)
  .c-{name}
    color val
  .c-bg-{name}
    background-color val
set-icon(name, w, h)
  .icon-{name}
    display inline-block
    width w
    height h
    background url('../img/' + name + '.png') no-repeat center
    background-size contain
set-gif(name, w, h)
  .icon-{name}
    display inline-block
    width w
    height h
    background url('../img/' + name + '.gif') no-repeat center
    background-size contain
    vertical-align middle
